{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["../AGENTS.md"],
  "default_agent": "orchestrator",
  "agent": {
    "build": { "disable": true },
    "plan": { "disable": true }
  },
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp"
    }
  },
  "formatter": {
    "csharpier": {
      "command": ["dotnet", "csharpier", "format", "$FILE"],
      "extensions": [".cs"]
    }
  },
  "permission": {
    // Fine tune linear tools in context
    "*linear_*": "deny",
    "*linear_*_comment*": "allow",
    "*linear_*_issue*": "allow",
  },
}
