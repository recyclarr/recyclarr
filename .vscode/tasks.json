{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "-property:GenerateFullPaths=true",
        "-consoleLoggerParameters:NoSummary"
      ],
      "problemMatcher": {
        "owner": "dotnet",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "\\s*(.+)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(\\w+):\\s+(.+)",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "src/Recyclarr.Cli/Recyclarr.Cli.csproj",
        "-property:GenerateFullPaths=true",
        "-consoleLoggerParameters:NoSummary",
        "-o",
        "docker/artifacts/${config:recyclarr.runtime}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "-property:GenerateFullPaths=true",
        "-consoleLoggerParameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
