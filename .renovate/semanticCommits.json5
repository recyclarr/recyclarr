{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  commitMessageExtra: "( {{currentVersion}} â†’ {{newVersion}} )",
  packageRules: [
    {
      description: "NuGet packages in .props and .csproj files",
      matchFileNames: ["*.props", "*.csproj"],
      commitMessagePrefix: "build(deps):",
    },
    {
      description: "GitHub Actions",
      matchManagers: ["github-actions"],
      commitMessagePrefix: "ci(deps):",
      commitMessageTopic: "action {{depName}}",
    },
    {
      description: "Pre-commit hooks",
      matchManagers: ["pre-commit"],
      commitMessagePrefix: "chore(deps):",
      commitMessageTopic: "pre-commit hook {{depName}}",
    },
  ],
}
